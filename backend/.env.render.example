APP_NAME=SentinelAI

# Render managed Postgres connection string
# Example: postgresql+psycopg2://user:password@host:5432/dbname
DATABASE_URL=

# Supabase auth configuration
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_JWT_SECRET=

# Comma-separated list of allowed frontend origins
